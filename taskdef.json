{
  "family": "taskapi-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::763383189399:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::763383189399:role/taskapiTaskRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "763383189399.dkr.ecr.ap-south-1.amazonaws.com/taskapi-app:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 8000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "STORAGE_BACKEND", "value": "s3" },
        { "name": "AWS_REGION", "value": "ap-south-1" },
        { "name": "AWS_S3_BUCKET", "value": "taskapi-medhini-dev" },
        { "name": "AWS_S3_PREFIX", "value": "attachments/" },
        { "name": "PRESIGNED_EXPIRES_SECONDS", "value": "900" },
        { "name": "ENVIRONMENT", "value": "prod" },
        { "name": "DEBUG", "value": "false" },
        { "name": "DATABASE_URL", "value": "sqlite:////tmp/task.db" },
        { "name": "AUTO_CREATE_TABLES", "value": "true" }
      ],
      "command": ["bash", "-lc", "uvicorn main:app --host 0.0.0.0 --port 8000"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/taskapi",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}